{
  "name": "outbox-processor",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest -i --silent",
    "test:int": "jest -i -c test/jest-integration.json",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:int:cov": "jest -c test/jest-integration.json --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.5",
    "@nestjs/core": "^10.0.5",
    "@nestjs/microservices": "^10.0.5",
    "@nestjs/mongoose": "^10.0.0",
    "@nestjs/platform-express": "^10.0.5",
    "@nestjs/terminus": "^10.0.1",
    "dotenv": "^16.3.1",
    "kafkajs": "^2.2.4",
    "mongoose": "^7.3.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.1.3",
    "@nestjs/schematics": "^10.0.1",
    "@nestjs/testing": "^10.0.5",
    "@types/jest": "29.5.2",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "20.3.3",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "@typescript-eslint/parser": "^5.61.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "testcontainers": "^9.9.1",
    "ts-jest": "29.1.1",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "**/__tests__/*.spec.ts",
      "**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s",
      "!src/main.ts",
      "!src/app.module.ts",
      "!src/statisticsMonitor.ts",
      "!src/publisher/logPublisher.ts",
      "!src/config/*.ts",
      "!test/integrationUtils.ts"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node"
  }
}
